{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "rewriteRelativeImportExtensions": true,

    "strict": true,

    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
